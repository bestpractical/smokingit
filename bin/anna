#!/usr/bin/env perl
use YAML;

use strict;
use warnings;

use Jifty;
BEGIN { Jifty->new( no_request => 1 ); };
use Smokingit::Slack;

my %config = %{ Jifty->config->app('slack') || {} };
unless (%config) {
    print "Slack is not configured; edit your site_config.yml\n";
    exit;
}

unless ($config{token}) {
    print "No token specified for Slack; edit your site_config.yml\n";
    exit;
}

my $client = Smokingit::Slack->new;
$client->run;

AE::cv->recv;
